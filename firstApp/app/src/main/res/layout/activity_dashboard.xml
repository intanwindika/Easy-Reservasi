<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aprivate.firstapp.dashboard">

    <Button
        android:id="@+id/btn_registrasi"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="151dp"
        android:drawableTop="@drawable/registrasi3"
        android:elevation="0dp"
        android:gravity="center|center_horizontal"
        android:padding="1dp"
        android:text="Registrasi"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="183dp"
        android:layout_height="159dp"
        android:drawableTop="@drawable/login"
        android:elevation="0dp"
        android:gravity="center|center_horizontal"
        android:padding="1dp"
        android:text="Login"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_hotel"
        android:layout_width="183dp"
        android:layout_height="159dp"
        android:drawableTop="@drawable/hotel2"
        android:elevation="0dp"
        android:gravity="center|center_horizontal"
        android:padding="1dp"
        android:text="Daftar Hotel"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="151dp"
        android:drawableTop="@drawable/about"
        android:elevation="0dp"
        android:gravity="center|center_horizontal"
        android:padding="1dp"
        android:text="About"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignTop="@+id/btn_hotel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_hotel" />
</RelativeLayout>
